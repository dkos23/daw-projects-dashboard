{
  "appId": "com.mydaw.projects",
  "productName": "DAW Projects Dashboard",
  "files": [
    "electron/",
    "out/",
    "frontend/",
    "node_modules/",
    "public/",
    "locales/",
    "package.json"
  ],
  "directories": {
    "output": "dist",
    "buildResources": "public/icons"
  },
  "publish": [
    {
      "provider": "github",
      "owner": "dkos23",
      "repo": "my-daw-projects"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/daw_app_icon_no_bg.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icons/daw_app_icon.icns",
    "category": "public.app-category.music",
    "hardenedRuntime": true,
    "entitlements": "build/entitlements.mac.plist",
    "gatekeeperAssess": false
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "DAW Projects Dashboard"
  }
}