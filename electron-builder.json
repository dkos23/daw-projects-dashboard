{
  "appId": "com.mydaw.projects",
  "productName": "My DAW Projects",
  "files": [
    "electron/",
    "out/",
    "frontend/",
    "node_modules/",
    "public/",
    "locales/",
    "package.json"
  ],
  "directories": {
    "output": "dist",
    "buildResources": "public/icons"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "public/icons/dkos23_icon.ico"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/icons/dkos23_icon.icns"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "My DAW Projects"
  }
}